@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var cape = Model.ForecastIndexModel?.GetItemByParameterId(9);
    var header = Model.ForecastIndexModel?.Header;
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-1">Severe Weather Tools</h1>
            <p class="lead text-muted">Accessible forecast maps, narrated Storm Prediction Center outlooks, and a searchable severe-events database — helping storm chasers, researchers, and visually impaired users prepare for and understand severe weather.</p>
        </div>
    </div>

    <!-- Past severe events database (moved above maps & videos) -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start">
                    <div>
                        <h4 class="card-title mb-1">Research past severe weather events</h4>
                        <p class="text-muted mb-2">Explore yearly summaries and detailed event pages in the database.</p>
                    </div>
                    <div class="btn-group mt-3 mt-md-0" role="group">
                        <a class="btn btn-primary" asp-page="/Events/AnnualOverview" asp-route-year="2026">2026 Severe Weather</a>
                        <a class="btn btn-outline-secondary" asp-page="/Events/Years">Other Years</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Forecast maps: one column wide -->
        <div class="col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Forecast Maps</h4>
                    <p class="text-muted small">Severe-weather prediction maps using color-blind–friendly palettes — designed for storm chasers.</p>

                    @if (cape is not null && header is not null)
                    {
                        <div class="mt-3">
                            @await Component.InvokeAsync("ModelForecastHome", Model.ForecastIndexModel)
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary small mb-0">Forecast maps are currently unavailable.</div>
                    }
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-page="/Forecasts/Index" class="btn btn-outline-primary btn-sm">See all maps</a>
                </div>
            </div>
        </div>

        <!-- Narrated videos: three columns wide (grid of 3) -->
        <div class="col-lg-8">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Latest Narrated Videos</h4>
                    <p class="text-muted small">Storm Prediction Center outlook text paired with risk-category graphics, narrated for users with visual impairments.</p>

                    @* The VideoPageHome view component renders its own .container > .row with .col children.
                       Wrapping it in another .row prevents the inner columns from laying out correctly,
                       so render the component directly here. *@
                    <div class="mt-2">
                        @await Component.InvokeAsync("VideoPageHome", Model.VideoPageModel)
                    </div>
                </div>
                <div class="card-footer bg-transparent d-flex justify-content-between align-items-center">
                    <small class="text-muted">New videos added regularly</small>
                    <a asp-page="/Videos/Index" class="btn btn-outline-primary btn-sm">View all videos</a>
                </div>
            </div>
        </div>
    </div>
</div>
